<div class="tournament_name"><h2><%= @tournament.tournament_name %></h2></div>
<div class="tournament_banner"><span><%= image_tag @tournament.tournament_banner %></span></div>
<div class="tournament_description"><%= @tournament.tournament_description %></div>
<div class="tournament_info">Start: <%= @tournament.tournament_start%> || End:
  <%=@tournament.tournament_end %></div>
<div class="tournament_edit"><%= link_to "Edit Tournament", edit_tournament_path%></div>
<div class="registrations"><%= link_to "View Registrations", tournament_registrations_path(@tournament)%></div>
<div class="new_registration"><%= link_to "Register Team", new_tournament_registration_path(@tournament)%></div>
